<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> need your attention.</h2>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= render_field_errors("email", user.errors) %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= render_field_errors(:password, user.errors) %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
    <%= render_field_errors("password_confirmation", user.errors) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
