<h1><%= @article.title %></h1>
<p><%= @article.body %></p>


<% if logged_in? &&  current_user.id == @article.user_id %>
  <ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article),
          method: :delete, 
          data: {confirm: "Are you sure?"} %></li>
  </ul>
<% end %>

<h2>Comments</h2>

<%= render @article.comments %>

<% if logged_in? %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form', article: @article, errors: session[:comment_errors] %>
<% end %>